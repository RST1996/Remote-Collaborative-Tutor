<% provide(:title, @course.name.to_s + " | Forum") %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<p>
  <strong>By:</strong>
  <%= @post.user.name %>
</p>

<!-- <p>
  <strong>Course:</strong>
  <%= @post.course %>
</p> -->

<% if @post.user_id == current_user.id %>
	<%= link_to 'Edit', edit_course_post_path(@course,@post), class: "btn btn-primary" %> 
	<%= link_to 'Delete', course_post_path(@course,@post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' }, class: "btn btn-danger" %> 
<% end %>
<%= link_to 'Back', course_posts_path, class: "btn btn-primary" %> 
<div>
  <h2>Add Comments</h2>
   <% @c = @post.comments %>
  <% @comments = @post.comments %>
  <% @comment = @post.comments.new %>
  <% @url = course_post_comments_path(@post.course,@post.id) %>
  <%= render 'comments/form', comment: @comment %>
</div>
<div>
  
  <%= render 'comments/index'%>
</div>

